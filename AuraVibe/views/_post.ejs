<li id="post-<%= post._id %>">
  <div class="feed-container__post-info">
    <% if (locals.user.id == post.user.id) { %>
    <small
      ><a class="delete-post-button" href="/posts/destroy/<%= post.id %>"
        >Delete Post</a
      ></small
    >
    <% } %>
    <p class="feed-container__post-user"><%= post.user.name %></p>
    <p class="feed-container__post-content"><%= post.content %></p>
    <small>
      <% if (locals.user) { %>
      <a
        class="toggle-like-button"
        data-likes="<%= post.likes.length %>"
        href="/likes/toggle/?id=<%= post._id %>&type=Post"
        ><%= post.likes.length %>Likes</a
      >
      <% } else { %> <%= post.likes.length %>Likes <% } %>
    </small>
  </div>

  <%- include("_comment") -%>
</li>
